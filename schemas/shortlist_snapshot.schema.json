{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShortlistSnapshot",
  "type": "object",
  "required": ["schema_version", "query", "region", "k", "created_at", "items"],
  "properties": {
    "schema_version": {"type": "string"},
    "query": {"type": "string"},
    "region": {"type": "string"},
    "k": {"type": "integer"},
    "created_at": {"type": "string", "format": "date-time"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool_id", "score", "confidence"],
        "properties": {
          "tool_id": {"type": "string"},
          "score": {"type": "number"},
          "confidence": {"type": "number"},
          "reason": {"type": "string"},
          "explain": {
            "type": "object",
            "properties": {
              "lexical": {"type": "number"},
              "semantic": {"type": "number"},
              "priors": {"type": "number"},
              "recency": {"type": "number"},
              "total": {"type": "number"}
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
