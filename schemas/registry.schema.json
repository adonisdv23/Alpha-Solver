{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alpha Registry Tools Schema",
  "type": "object",
  "required": ["tools"],
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool_id", "name", "description"],
        "properties": {
          "tool_id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "priors": {
            "type": "object",
            "properties": {
              "sentiment": {"type": "number", "minimum": 0, "maximum": 1},
              "adoption": {"type": "number", "minimum": 0, "maximum": 1},
              "risk": {"type": "number", "minimum": 0, "maximum": 1},
              "cost": {"type": "number", "minimum": 0, "maximum": 1}
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
